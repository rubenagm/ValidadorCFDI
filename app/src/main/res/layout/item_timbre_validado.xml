<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="131dp">
    <LinearLayout
        android:id="@+id/item_timbre_linear_layout"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_timbre_text_linea_valido"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="6dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/item_timbre_icono_valido"
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <TextView
                            android:id="@+id/item_timbre_text_valido"
                            android:layout_marginLeft="7dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:alpha=".8"
                            android:textColor="@color/colorBlack"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:alpha=".9"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"
                            android:text="Emisor:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/item_timbre_text_rfc_emisor"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:alpha=".9"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"
                            android:text="Receptor:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/item_timbre_text_rfc_receptor"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:alpha=".9"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Monto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/item_timbre_text_monto"
                        android:textSize="22sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:alpha=".15"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>